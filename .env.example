# Fast Wallet Service - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application name (for logging and documentation)
APP_NAME="Fast Wallet Service"

# Debug mode (NEVER set to True in production)
DEBUG=False

# Environment type: "development" or "production"
ENVIRONMENT="development"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (for development)
# DATABASE_URL="sqlite:///./wallet.db"

# PostgreSQL (local development)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/wallet_db"

# PostgreSQL on Google Cloud SQL (production)
# DATABASE_URL="postgresql+asyncpg://wallet_user:password@/wallet_db?unix_socket_path=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME"

# REQUIRED: Set one of the above
DATABASE_URL="sqlite:///./wallet.db"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Secret key for JWT signing (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
# REQUIRED: Change this in production
SECRET_KEY="your-super-secret-key-change-this-in-production"

# JWT algorithm
ALGORITHM="HS256"

# JWT token expiry in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# OAUTH CONFIGURATION (Google)
# ============================================================================

# Google OAuth Client ID (currently mocked)
GOOGLE_CLIENT_ID="mock-client-id"

# Google OAuth Client Secret (currently mocked)
GOOGLE_CLIENT_SECRET="mock-client-secret"

# Google OAuth Redirect URI
# Development: http://localhost:8000/auth/google/callback
# Production: https://your-domain.com/auth/google/callback
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"

# ============================================================================
# PAYSTACK CONFIGURATION
# ============================================================================

# Paystack Secret Key (sk_test_* for testing, sk_live_* for production)
# Get from: https://dashboard.paystack.co/settings/developers
PAYSTACK_SECRET_KEY="sk_test_your_test_secret_key"

# Paystack Public Key (pk_test_* for testing, pk_live_* for production)
# Get from: https://dashboard.paystack.co/settings/developers
PAYSTACK_PUBLIC_KEY="pk_test_your_test_public_key"

# Paystack Webhook Secret (for signature verification)
# Get from: https://dashboard.paystack.co/settings/developers
# Generate new with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
PAYSTACK_WEBHOOK_SECRET="test-webhook-secret"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG
# Production: WARNING or ERROR
LOG_LEVEL="DEBUG"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8000
# Production: https://your-domain.com,https://www.your-domain.com
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# ============================================================================
# OPTIONAL: GOOGLE CLOUD CONFIGURATION
# ============================================================================

# Google Cloud Project ID (for GCP deployment)
# GCP_PROJECT_ID="your-project-id"

# Google Cloud Region (for GCP deployment)
# GCP_REGION="us-central1"

# ============================================================================
# OPTIONAL: REDIS CONFIGURATION (for future caching)
# ============================================================================

# Redis URL (for caching, optional)
# REDIS_URL="redis://localhost:6379"

# ============================================================================
# OPTIONAL: MONITORING & LOGGING
# ============================================================================

# Sentry DSN (for error tracking, optional)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ============================================================================
# NOTES
# ============================================================================

# 1. SECURITY:
#    - Generate secure SECRET_KEY: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
#    - Never commit .env to version control
#    - Use different keys for dev, staging, and production
#    - Rotate keys regularly

# 2. PAYSTACK SETUP:
#    - Sign up at https://paystack.co/
#    - Get test keys from dashboard (for development)
#    - Get live keys from dashboard (for production)
#    - Update webhook URL in dashboard to your deployment URL
#    - Copy webhook secret and update PAYSTACK_WEBHOOK_SECRET

# 3. DATABASE SETUP:
#    - SQLite: Automatically created on first run
#    - PostgreSQL: Create database and user first:
#      createdb wallet_db
#      createuser wallet_user
#      psql -c "ALTER USER wallet_user WITH PASSWORD 'password';"

# 4. DEPLOYMENT:
#    - For GCP: Use Google Secret Manager instead of .env
#    - For other platforms: Use environment variables or secret management tools
#    - Never hardcode secrets in code or Docker images

# 5. TESTING:
#    - Use test Paystack keys (sk_test_*, pk_test_*)
#    - Use SQLite database for development
#    - Set DEBUG=True for development
#    - Set LOG_LEVEL=DEBUG for development

# ============================================================================
